<% provide(:title, "Log in") %>
<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %></title>
  </head>
  <body>
    <p id=”alert”><%= alert %></p>

    <h1>Log In</h1>
    <%= form_tag login_path do |form| %>

        <div class="form-group">
          <%= label_tag :email %><br />
          <%= text_field_tag :email %><br />
        </div>

        <div class="form-group">
          <%= label_tag :password %><br />
          <%= password_field_tag :password %><br /><br />
        </div>

        <div class="actions">
          <%= submit_tag "Log In" %><br />
        </div>
        <br />

        <div class="addition">
          <p><strong>Don't have an account yet?</strong></p>
          <%= link_to 'Sign up', signup_path, class: "btn btn-sm btn-success" %>
        </div>

    <% end %>
  </body>
</html>
