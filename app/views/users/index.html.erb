<% provide(:title, "Users") %>
<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | Users</title>
  </head>
  <body>
    <p id="notice"><%= notice %></p>

    <div class="container fluid">
      <div class="row-fluid">
        <div class="img-responsive">
          <%= image_tag("inspiration.jpg", alt: "People", :size => "1000x600") %>
        </div>
      </div>
    </div>

    <h1 id="usersheader">USERS</h1>
    <div class="users_index">
      <ul>
        <% @users.each do |user| %>
          <li>
            <%= gravatar_for user, size: 50 %>
            <%= link_to user.name, user %>


          </li> <br />
        <% end %>
      </ul>
    </div>
  </body>
</html>
