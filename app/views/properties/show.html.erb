<% provide(:title, "Property") %>
<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> |</title>
  </head>
  <body>
    <p id="notice"><%= notice %></p>


    <p>
      <strong>Title:</strong>
      <%= @property.title %>
    </p>

    <p>
      <strong>User:</strong>
      <%= @property.user_id %>

    </p>

    <p>
      <strong>Price:</strong>
      <%= @property.price %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @property.description %>
    </p>

    <p>
      <strong>Address:</strong>
      <%= @property.address %>
    </p>

    <p>
      <strong>Status:</strong>
      <%= @property.status %>
    </p>

    <%= link_to 'Edit', edit_property_path(@property), class: "btn btn-sm btn-success" %> |
    <%= link_to 'Back', properties_path, class: "btn btn-sm btn-success" %> |
    <%= link_to 'Destroy', @property, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-success" %>
  </body>
</html>
