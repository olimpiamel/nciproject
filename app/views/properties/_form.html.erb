<%= form_with(model: property, local: true) do |form| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <%= render 'common/errors', object: property %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %><br />
    <%= form.text_field :title %>
  </div>

  <div class="form-group">
    <%= form.label :user_id %><br />
    <%= form.number_field :user_id, placeholder: "Enter your user ID" %>
  </div>

  <div class="form-group">
    <%= form.label :price %><br />
    <%= form.number_field :price, placeholder: "Enter only the price number" %>
  </div>

  <div class="form-group">
    <%= form.label :description %><br />
    <%= form.text_area :description, placeholder: "Describe your property" %>
  </div>

  <div class="form-group">
    <%= form.label :address %><br />
    <%= form.text_field :address %>
  </div>

  <div class="form-group">
    <%= form.label :status %><br />
    <%= form.text_field :status %>
  </div>

  <div class="form-group">
    <%= form.label :images %><br />
    <%= form.file_field :images, multiple: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
