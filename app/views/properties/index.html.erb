<% provide(:title, "Properties") %>
<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | Properties</title>
  </head>
  <body>
    <p id="notice"><%= notice %></p>

    <h1>Your ideal space awaits here!</h1>
    <div class="row">
      <div class="spacer"></div>
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-body">
              <%= link_to 'Add a new space', new_property_path, class: "btn btn-sm btn-success" %>
              <div class="spacer"></div><br />
              <p class="phrase">Share your property!</p>
              <p class="phrase">Just click on the above button</p>
              <p class="phrase">All fields of the form are required</p>
              <p class="phrase">Add photos to show how beautiful your space is! (Includding photos is not manadatory)</p>
            </div>
          </div>
        </div>

        <div class="col-md-8">
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="prop_index">
                <% @properties.each do |property| %>
                  <div class="indivprop">
                    <p<strong>Title: </strong><%= link_to property.title, property %></p>
                    <p><strong>Price: </strong><%= property.price %></p>
                    <p><strong>Id: </strong><%= property.id %></p>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
  </body>
</html>
