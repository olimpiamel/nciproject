<%= form_with(model: [ @property, @property.comments.build ], local: true) do |form| %>
  <div class="form-group">
    <p>
      <%= form.label :body %><br>
      <%= form.text_area :body, placeholder: "Write your comment here" %>
    </p>
  </div>
  <div class="actions">
    <p>
      <%= form.submit %>
    </p>
  </div>
<% end %>
